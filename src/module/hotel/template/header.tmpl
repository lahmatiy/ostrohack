<b:style src="header.css"/>
<b:define name="hasChildren" type="bool"/>

<div class="b-heading m-disabled b-heading_state_search-form">
  <div class="b-heading__search-wrapper b-heading__search-wrapper_overflowable" style="text-indent: 0px;">
    <div class="b-search-info">
      <div class="b-search-info__inner clearfix">
        <div class="heading_requestParams_searchInfo_requestDetails">
          <a class="b-search-info__serp-link" title="" event-click="showHotels">Посмотреть все отели</a>
          <div class="b-search-info__details"> <span class="b-search-info__guests-number">{l10n:app.module.hotel.settings.for} {adultsCount} {adultsText} <span class="b-search-info__details_children {hasChildren}">{l10n:app.module.hotel.settings.and}&nbsp;{childrenCount} {childrenText}</span></span>
            <span class="dates"> {l10n:app.module.hotel.settings.from} {arrivalDate} {arrivalMonth} {l10n:app.module.hotel.settings.till} {departureDate} {departureMonth}</span>
            <span class="b-search-info__change-conditions heading_requestParams_changeLink">Изменить условия</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>